<div class="map">
    <table>
    {{#each-in tiles as |rown row| }}
        <tr>
            {{#each-in row as |celln cell| }}
                <Map-Tile
                  @x={{ cell.position.x }}
                  @y={{ cell.position.y }}
                  @character={{ cell.character }}
                  @objects={{ cell.objects }}
                  @markPlayer={{ cell.markPlayer }}
                  @type="{{ cell.type }}"
                />
            {{/each-in}}
        </tr>
    {{/each-in}}
    </table>
</div>

<CharacterControl @id="character-compass" @player="{{ player }}"/>

<div class="menu">
    <div class='box'>
        <div class='box-inner'>
            {{#bs-form formLayout="inline" onSubmit=(action "movenorth") as |form|}}
                {{#form.group}}
                    <div class="row">
                        <div class="col"> <BsButton @type="primary">Find</BsButton> </div>
                        <div class="col"> <BsButton @type="primary">Database</BsButton> </div>
                        <div class="col"> <BsButton @type="primary">Ranking</BsButton> </div>
                        <div class="col"> <BsButton @type="primary">About</BsButton> </div>
                        <div class="col"> <BsButton @type="primary">Log out</BsButton> </div>
                      </div>
                {{/form.group}}
            {{/bs-form}}
        </div>
    </div>
</div>