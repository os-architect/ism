<div class="map-tile-content {{ if this.markPlayer "map-tile-player" }}{{ if this.markContent "map-tile-character" }}" >
    {{#if this.markContent }}
        {{#ember-tooltip}}
            <Profile
                @classNames=["floating-profile"]
                @character={{ character }}
                @position={{ character.position }}
                @attributes={{ character.attributes }}
                @skills={{ character.skills }}
                @inventory={{ character.inventory }}
             />
         {{/ember-tooltip}}
    {{/if}}
</div>